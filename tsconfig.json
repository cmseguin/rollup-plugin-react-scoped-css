{
  "compilerOptions": {
    "target": "es5",
    "module": "ES2022",
    "moduleResolution": "node",
    "lib": ["es2017", "es7", "es6", "dom"],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "downlevelIteration": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.*",
    "examples/**?*"
  ]
}