  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "downlevelIteration": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.*",
    "examples/**?*"
  ]
}